@model VehicleProject.Web.Models.VehicleModelVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Delete Model";
}


<div class="panel panel-primary">
    <div class="panel-heading panel-head">Delete Model</div>
    <div class="panel-body">
        <div>
            <h3 class="text-danger">Are you sure you Want to delete this model?</h3>
        </div>
            @using (Html.BeginForm())
            {
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.MakeId)
                <div class="form-gorup">
                    @Html.LabelFor(model => model.Make.Name, new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-9">
                        @Html.TextBoxFor(model => model.Make.Name , new { @readonly="readonly", @class = "form-control" })
                    </div>
                </div>

                <div class="form-gorup">
                    @Html.LabelFor(model => model.Name , new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-9">
                        @Html.TextBoxFor(model => model.Name, new { @readonly="readonly", @class = "form-control" })
                    </div>
                </div>

                <div class="form-gorup">
                    @Html.LabelFor(model => model.Abbr, new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-9">
                        @Html.TextBoxFor(model => model.Abbr, new { @readonly="readonly", @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-1"></div>
                    <div class="col-lg-9">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-success" })
                    </div>
                </div>
            }
    </div>
</div>
