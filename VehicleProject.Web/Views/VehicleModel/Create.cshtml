@model VehicleProject.Web.Models.VehicleModelCreateVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create Model";
}

<div class="panel panel-primary">
    <div class="panel-heading panel-head">Create Model</div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
                <div class="form-gorup">
                    <div class="col-lg-3">
                    Vehicle Make
                    </div>
                    <div class="col-lg-9">

                        @Html.DropDownListFor(model =>model.MakeId, ViewBag.dropDownListOptions as SelectList, new { @class = "btn btn-dropdown dropdown-toggle" })

                    </div>
                </div>

                <div class="form-gorup">
                    @Html.LabelFor(model => model.ModelName, new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-9">
                        @Html.TextBoxFor(model => model.ModelName, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-gorup">
                    @Html.LabelFor(model => model.ModelAbbr, new { @class = "col-lg-3 control-label" })
                    <div class="col-lg-9">
                        @Html.TextBoxFor(model => model.ModelAbbr, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-1"></div>
                    <div class="col-lg-9">
                        <input type="submit" value="Create" class="btn btn-danger" />
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-success" })
                    </div>
                </div>
            }
    </div>
</div>
