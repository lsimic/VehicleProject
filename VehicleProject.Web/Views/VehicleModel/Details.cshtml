@model VehicleProject.Web.Models.VehicleModelDetailVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Model Details";
}


<div class="panel panel-primary">
    <div class="panel-heading panel-head">Model details</div>
    <div class="panel-body">
@using (Html.BeginForm())
            {
        
            <div class="form-gorup">
                @Html.LabelFor(model => model.ModelId, new { @class = "col-lg-3 control-label" })
                <div class="col-lg-9">
                    @Html.TextBoxFor(model => model.ModelId, new { @readonly = "readonly", @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.VehicleMake.MakeName, new { @class = "col-lg-3 control-label" })
                <div class="col-lg-9">
                    @Html.TextBoxFor(model => model.VehicleMake.MakeName, new { @readonly = "readonly", @class = "form-control" })
                </div>
            </div>

            <div class="form-gorup">
                @Html.LabelFor(model => model.ModelName, new { @class = "col-lg-3 control-label" })
                <div class="col-lg-9">
                    @Html.TextBoxFor(model => model.ModelName, new { @readonly = "readonly", @class = "form-control" })
                </div>
            </div>

            <div class="form-gorup">
                @Html.LabelFor(model => model.ModelAbbr, new { @class = "col-lg-3 control-label" })
                <div class="col-lg-9">
                    @Html.TextBoxFor(model => model.ModelAbbr, new { @readonly = "readonly", @class = "form-control" })
                </div>
            </div>


                <div class="form-group">
                    <div class="col-lg-1"></div>
                    <div class="col-lg-9">
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-success" })
                    </div>
                </div>
            }


    </div>
</div>
